{% assign article = articles[section.settings.article] %}

<div class="page-width product-section section-text-row blog-featured">
    <div class="grid">
        <div class="text-row heading">
            <div class="image">
                <a href="{{ article.url }}"><img src="{{ article.image.src | img_url: 'master' }}"></a>
            </div>
            <div class="heading-content">
                <div class="section-label">
                    Doporuƒçujeme
                </div>
                <a href="{{ article.url }}"><h3>{{ article.title }}</h3></a>
                {% if article.tags.size > 0 %}
                    <div class="article__tags rte">
                        <ul class="list--inline" aria-label="{{ 'blogs.article.tags' | t }}">
                            {% for tag in article.tags %}
                                {% if tag contains "time" or tag contains "product:" %}
                                {% else %}
                                    <li>
                                        <a href="{{ blog.url }}/tagged/{{ tag | handle }}"
                                           class="article__grid-tag">{{ tag }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                        {% for tag in article.tags %}
                            {% if tag contains "time" %}
                                {% assign tag_split = tag | split: ':' %}
                                <li class="time-count">{{ tag_split[1] }}</li>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
                <a href="{{ article.url }}">
                    <div class="article-text">
                        {{ article.excerpt | strip_html | truncate: 166 }}
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

