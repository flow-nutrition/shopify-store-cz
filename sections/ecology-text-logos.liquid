<div class="logos__wrapper__outer">
    <div class="text__wrapper">
        <h2 class="section__heading">{{section.settings.heading}}</h2>
        <div>{{section.settings.content}}</div>
    </div>
    <div class="logos__wrapper">
        <div class="logo">
            {% if section.settings.logo2_img != blank %}     
                <img src="{{ section.settings.logo1_img | img_url: 'master' }}">
            {% else %}
                {{section.settings.logo1}}
            {% endif %}
        </div>
        <div class="divider"></div>
        <div class="logo">
            {% if section.settings.logo2_img != blank %}     
                <img src="{{ section.settings.logo2_img | img_url: 'master' }}">
            {% else %}
                {{section.settings.logo2}}
            {% endif %}
        </div>
    </div>
</div>

<style>
    .logos__wrapper__outer h2{
        text-align: center;
    }
    .logos__wrapper__outer{
        max-width: 890px;
        padding: 0 20px;
        margin: 0 auto 200px;
    }
    .section__content p{
        font-size: 16px;
        color: rgba(0, 0, 0, .6);
        line-height: 1.5;
    }
    .small__wrapper h3{
        text-align: center;
    }
    .section__content{
        max-width: 600px;
        margin: 0 auto;
    }
    .logos__wrapper{
        display: flex;
        justify-content: center;
        margin-top: 60px;
    }
    .logos__wrapper .logo{
        border: 2px solid #E4E7E9;
        padding: 25px;
        border-radius: 100px;
        font-size: 32px;
        line-height: 1.5;
        color: #6C6E73;
        margin: 10px 0;
        width: 100%;
        text-align: center;
        max-width: 370px;
    }
    .divider{
        width: 1px;
        background: rgba(0,0,0, .2);
        margin: 0 auto;
    }

    @media screen and (max-width: 1440px) {
        .logos__wrapper__outer{
            margin: 0 auto 100px;
        }
    }
    @media screen and (max-width: 992px) {
        .logos__wrapper .logo{
            padding: 25px;
        }
    }

    @media screen and (max-width: 768px) {
        .logos__wrapper{
            flex-direction: column;
            text-align: center;
            margin-top: 40px;
        }
        .logos__wrapper__outer{
            margin: 80px auto;
        }
        .logos__wrapper__outer h2{
            font-size: 28px;
            line-height: 1.5;
        }
        .logos__wrapper .logo{
            padding: 20px;
            font-size: 28px;
            margin: 10px auto;
        }
    }
</style>


{% schema %}
{
    "name": "Text logos",
    "settings": [
        {
           "type": "text",
           "id": "heading",
           "label": "Heading"
        },
        {
           "type": "richtext",
           "id": "content",
           "label": "Text"
        },
        {
           "type": "text",
           "id": "logo1",
           "label": "Logo 1"
        },
        {
            "type": "image_picker",
            "id": "logo1_img",
            "label": "Logo 1 image"
        },
        {
           "type": "text",
           "id": "logo2",
           "label": "Logo 2"
        },
        {
            "type": "image_picker",
            "id": "logo2_img",
            "label": "Logo 2 image"
        }
    ]
}
{% endschema %}