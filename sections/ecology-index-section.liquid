<div class="wrapper-index">
    <div class="index_image__text__wrapper">
        <h2 class="index_section__heading">{{section.settings.heading}}</h2>
        <p class="index_section__text">{{section.settings.content}}</p>
    </div>
    <div class="index_image__wrapper">
        <img src="{{section.settings.bg__img | img_url: 'master'}}" alt="{{section.settings.bg__img.alt}}" class="background__img">
    </div>
</div>

<style>
    .index_section__text {
        color: #6C6E73;
        font-size: 16px;
        line-height: 28px;
        max-width: 700px;
    }
    .index_image__wrapper{
        width: 50%;
    }
    .background__img{
        width: 100%;
    }
    .index_section__heading{
        line-height: 56px;
        color: #222;
    }
    .index_image__text__wrapper{
        width: 50%;
        margin-right: 70px;
    }
    .wrapper-index img{
        border-radius: 10px;
        width: 100%;
    }
    .wrapper-index{
       display: flex;
        width: 100%;
        align-items: center;
        padding-bottom: 100px;
    }
    @media screen and (max-width: 1440px) {
        .wrapper-index{
            padding-bottom: 50px;
        }
    }
    @media screen and (max-width: 970px) {
        .index_image__wrapper{
            width: 100%;
        }
        .index_section__heading{
           font-size: 32px;
        }
        .index_image__text__wrapper{
            width: 100%;
            margin-right: 0;
            margin-bottom: 16px;
        }
        .wrapper-index{
            width: 100%;
            flex-direction: column;
        }
        .index_section__heading{
            line-height: 42px;
            color: #222;
        }
    }
</style>


{% schema %}
{
    "name": "Index section",
    "settings": [
        {
          "type": "image_picker",
          "id": "bg__img",
          "label": "Background image" 
        },
        {
           "type": "text",
           "id": "heading",
           "label": "Section heading"
        },
      {
        "type": "text",
        "id": "content",
        "label": "Section heading"
      }
    ]
}
{% endschema %}