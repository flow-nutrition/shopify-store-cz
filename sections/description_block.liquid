<div class="description_block">
    <div class="img_block">
        <img src="{{ section.settings.descr_img | img_url: 'master' }}">
    </div>
    <div class="description_block_position">
        <div class="m_img_block">
            <img src="{{ section.settings.m_descr_img | img_url: 'master' }}">
        </div>
        <div class="description">
            <h4>{{ section.settings.head_d}}</h4>
            <h3>{{ section.settings.text-box_d}}</h3>
            <a href="{{ section.settings.descr_link}}">{{ section.settings.link_text}}</a>
        </div>
    </div>
</div>


<style>
    .description h3{
        font-size: 19px;
        line-height: 32px;
        font-weight: normal;
        margin-bottom: 32px;
    }
    .description h4{
        font-size: 14px;
        line-height: 24px;
        text-transform: uppercase;
        font-weight: normal;
        color: #8B9093;
        margin-bottom: 32px;
    }
    .description_block{
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 148px 0;
        max-width: 1440px;
        margin: auto;
    }
    .description_block_position{
        display: flex;
        width: 80%;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .img_block{
        width: 100%;
        margin-left: 40px;
    }
    .img_block img{
            max-width: 1129px;
        }
    .m_img_block{
        display: none;
        flex-direction: column;
        width: 100%;
        padding: 0 16px;
    }
    .description{
        display: flex;
        max-width: 436px;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        margin-left: auto;
        padding: 80px 0 30px 0;
        margin-right: 130px;
    }
    .description a{
        color: #FF4438;
        border-bottom: 2px solid;
        font-size: 16px;
        line-height: 20px;
    }
    .description a:hover{
        border-bottom: none;
    }
    @media screen and (max-width: 1170px){
        .description{
            margin-right: 0;
        }
        .img_block{
            width: 90%;
            margin-left: 0;
        }
        .img_block img{
            width: 100%;
        }
    }
    @media screen and (max-width: 768px){
        .description_block{
            padding: 54px 0;
        }
        .description_block_position{
            width: 90%;
        }
        .description{
            max-width: 380px;
        }
        .img_block{
            margin-left: 0;
            padding: 0 16px;
        }
        .img_block img{
            width: 100%;
        }
    }
    @media screen and (max-width: 425px){
        .description_block h3{
            margin: 0 0 16px;
        }
        .description_block h4{
            margin: 0 0 16px;
        }
        .description_block{
            padding: 0;
        }
        .description{
            max-width: 279px;
            padding: 42px 0;
        }
    }
    @media screen and (max-width: 375px){
        .description_block_position{
            width: 100%;
        }
        .img_block{
            display: none;
        }
        .m_img_block{
            display: flex;
        }
        .description{
            max-width: 230px;
            margin-right: 30px;
        }
    }
</style>

{% schema %}
{
    "name": "description",
    "settings": [
        {
            "type": "image_picker",
            "id": "descr_img",
            "label": "Description Image"
        },
        {
            "type": "image_picker",
            "id": "m_descr_img",
            "label": "Mobile Description Image"
        },
        {
            "id": "head_d",
            "type":"text",
			"label":"Heading",
			"default":"Tittle"
        },
        {
            "id": "text-box_d",
            "type":"text",
			"label":"Info",
			"default":"Information"
        },
        {
            "id": "descr_link",
            "type":"url",
			"label":"Link"
        },
        {
            "id": "link_text",
            "type":"text",
			"label":"Link text",
            "default":"Link Text"
        }
    ]
}
{% endschema %}