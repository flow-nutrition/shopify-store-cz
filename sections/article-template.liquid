{% assign articleContent = article.content | split: "[--split--]" %}
{% assign featured_products = article.metafields.product.feature %}

<div class="guarantee_block">
    <div class="guarantee_block_position">
      <h2 class="article-title">{{article.title}}</h2>
      <ul class="list--inline article" aria-label="{{ 'blogs.article.tags' | t }}">
      {% for tag in article.tags %}
        {% if tag contains "time" or tag contains "product:" %}
        {% else %}
          <li>
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tag">{{ tag }}</a>
          </li>
        {% endif %}
        {% endfor %}
      </ul>
      {% for tag in article.tags %}
      {% if tag contains "time" %}
        {% assign tag_split = tag | split: ':' %}
        <div class="time-count">{{ tag_split[1] }}</div>
      {% endif %}
    {% endfor %}

      {% if articleContent[1] %}
        {{ articleContent | first }}

        <div class="feature-product">
        </div>

        {{ articleContent | last }}
        {% else %}
          {{ articleContent }}

      {% endif %}



      </div>
  </div>
  


  
