  {% assign image_size = 'grande' %}
{% assign features = article.metafields.product.feature | split: "," %}
  <script>
    var recommendations = [];
    {% if featured_products %}
    recommendations = $.trim("{{ featured_products }}").split(/[\s,;|]+/);

    {% endif %}
    if (recommendations.length && recommendations[0] !== '') {
      var list = $('.feature-product');
      for (var i=0; i<recommendations.length; i++) {

        jQuery.getJSON('/products/' + recommendations[i] + '.js', function(product) {
          list.append('<div class="product">' +
                  '<div class="product-title">'+ product.title +'</div>'+
                  '<div class="image-wrapper">' +
                  '<a href="'+ product.url +'">' +
                  '<img src="' + product.images[0].replace(/(\.jpg|\.png|\.jpeg|\.gif)/, '_{{ image_size }}$1') + '" alt="">' +
                  '</a>' +
                  '<div class="add-to-cart-wrapper mobile">' +
                  '</div>' +
                  '</div>' +
                  '<div class="product-content">' +
                  '<p></p>' +
                  '<ul class="feature-list"></ul>' +
                  '<div class="bottom-content">' +
                  '<a href="'+ product.url +'" class="product-detail-link">'+ 'DETAIL PRODUKTU' +'</a>' +
                  '<div class="add-to-cart-wrapper">' +
                  '</div></div></div></div>' +
                  '');
        });
      }
    }

  </script>

