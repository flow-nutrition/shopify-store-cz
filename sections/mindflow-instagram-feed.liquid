    }
    .feed-wrapper .inst-image:nth-child(4){
      margin-top: -46px;
      margin-left: -145px;
    }
    .feed-wrapper .inst-image:nth-child(5){
      margin-top: -67px;
      margin-left: 97px;
      z-index: 2;
    }
  }
  @media (max-width: 480px) {
    .instagram-feed-wrapper{
      padding-top: 50px;
    }
    .instagram-title-wrapper .sub-title{
      font-size: 13px;
      line-height: 24px;
      color: #8B9093;
      margin-bottom: 16px;
    }
    .instagram-title-wrapper h2{
      font-size: 24px;
      line-height: 32px;
      max-width: 319px;
      margin-left: auto;
      margin-right: auto;
    }
    .instagram-feed .feed-wrapper{
      margin-top: 48px;
    }
  }

</style>

