    padding-top: 50px;
  }
  .instagram-title-wrapper{
    text-align: center;
  }
  .instagram-title-wrapper .sub-title{
    font-size: 14px;
    line-height: 24px;
    color: #6C6E73;
    letter-spacing: 1px;
    font-family: "Graphik-Regular";
    text-transform: uppercase;
    margin-bottom: 19px;
  }
  .instagram-title-wrapper h2{
    font-size: 32px;
    line-height: 48px;
    font-family: "Graphik-Regular";
    color: #222222;
    margin-bottom: 0;
  }
  .instagram-title-wrapper a{
    color: #FF4438!important;
    margin-left: 10px;
  }

  .instagram-feed .feed-wrapper{
    position: relative;
    display: flex;
    justify-content: center;
    margin-top: 142px;
    margin-bottom: 70px;
  }
  .page-width.instagram-feed{
    padding-left: 32px;
    padding-right: 32px;
  }

  .feed-wrapper .inst-image:nth-child(1){

  }
  .feed-wrapper .inst-image:nth-child(2){
