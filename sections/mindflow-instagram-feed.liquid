<div class="instagram-feed-wrapper">

  <div class="page-width instagram-feed">
    <div class="instagram-title-wrapper">
      <div class="sub-title">{{ section.settings.sub-title }}</div>
      <h2>{{ section.settings.title }}<a href="https://www.instagram.com/{{ section.settings.inst-name | remove: '@' }}/" target="_blank">{{ section.settings.inst-name }}</a></h2>
    </div>
    <div class="feed-wrapper">
      {% for block in section.blocks %}
            <div class="inst-image">
              <a href="{{ block.settings.button_link }}" target="_blank">
                <img src="{{ block.settings.image | img_url: '' }}" alt="{{ block.settings.heading }}">
              </a>
            </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
