  }

  @media (max-width: 749px) {
    .instagram-feed-wrapper{
      padding-top: 50px;
    }
    .instagram-feed .feed-wrapper{
      flex-direction: column;
      align-items: center;
      margin-top: 80px;
    }
    .inst-image img{
      max-width: 70%;
      margin: 0 auto;
