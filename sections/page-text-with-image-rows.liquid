<div style="background-image: linear-gradient(180deg,#FAFCFD 0%,#FFFFFF 100%);">
  <div class="page-text-with-image-rows">
    <h1>{{ section.settings.heading }}</h1>

    <div class="container">
      {% for block in section.blocks %}
        <div class="item">
          <div class="text-content">
            <img class="svg" src="{{ forloop.index | append: '.svg' | asset_url }}" alt="{{ forloop.index }} svg">
            <div>
              {% if block.settings.heading != blank %}
                <h2>{{ block.settings.heading | escape }}</h2>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="rte-setting">{{ block.settings.text }}</div>
              {% endif %}
            </div>
          </div>
          {% if block.settings.image != blank %}
            <div class="image"><img src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.heading }}" {% if block.settings.heading == 'Zpětná vazba' %}style="width: 30%;"{% endif %}></div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div class="button-link">
      <a href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Text with image rows",
  "class": "page-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Default heading"
    },
	{
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Row",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
