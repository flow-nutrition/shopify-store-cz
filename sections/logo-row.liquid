<section class="logo-section-wrapper">
    <div class="logo-section-content">
        <div class="page-width">
            <div class="logo-list border--{{ section.id }}">
                <div class="logo-title">{{ section.settings.heading | escape }}</div>
                <div class="logo-wrapper">
                    {% for block in section.blocks %}
                        {% if block.settings.image != blank %}
                            <div class="logo">
                                <div class="logo-content">{{ block.settings.content }}</div>
                                <a href="{{ block.settings.link }}" target="_blank">
                                    <img src="{{ block.settings.image | img_url: 'master' }}" alt="logo">
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .logo-section-content{
        margin-left: 140px;
        margin-right: 144px;
    }
    .logo-title{
        font-size: 14px;
        line-height: 24px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #6C6E73;
        margin-right: 0;
        text-align: center;
        margin-bottom: 129px;
    }
    .logo-list {
        padding-top: 80px;
        padding-bottom: 233px;
        display: block;
    }
    .logo-wrapper{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }
    .logo-section-wrapper{
        background-color: {{ section.settings.bg-color }};
    }
    .logo-content p{
        max-width: 283px;
        text-align: center;
        color: #222222;
        opacity: 0.8;
        font-size: 18px;
        line-height: 32px;
        font-style: italic;
        font-family: 'Graphik-Medium';
        margin-bottom: 24px;
    }
    .logo{
        text-align: center;
    }
    @media (max-width: 1200px) {
        .logo-section-content {
            margin-left: 50px;
            margin-right: 50px;
        }
    }
    @media (max-width: 996px) {
        .logo-section-content {
            margin-left: 32px;
            margin-right: 32px;
        }
    }
    @media (max-width: 850px) {
        .logo-wrapper{
            flex-wrap: wrap;
            justify-content: center;
        }
        .logo-section-content {
            margin-left: 32px;
            margin-right: 32px;
        }
        .logo-wrapper .logo{
            padding: 10px;
            margin-bottom: 15px;
        }
        .logo-list{
            padding-bottom: 75px;
        }
        .logo-content p{
            font-size: 20px;

        }
    }
    @media (max-width: 767px) {
        .logo-title{
            margin-bottom: 52px;
        }
        .logo-wrapper{
            flex-direction: column;
            align-items: center;
        }
        .logo-list{
            padding-top: 53px;
        }
        .logo-section-content{
            margin: 50px 0;
        }

    }
    @media (max-width: 480px) {
        .logo-section-content{
            margin-left: 0;
            margin-right: 0;
        }
        .logo-wrapper .logo{
            margin-bottom: 72px;
        }
        .logo-list {
            padding-bottom: 3px;
        }
    }

</style>

{% schema %}
{
"name": "Mindflow logo list",
"class": "logo-section",
"max_blocks": 20,
"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "Default heading"
},
{
"type": "color",
"id": "bg-color",
"label": "Background color"
}
],
"blocks": [
{
"type": "logo_image",
"name": "Logo",
"settings": [
{
"type": "richtext",
"id": "content",
"label": "Content"
},
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "url",
"id": "link",
"label": "Link"
}
]
}
],
"presets": [
{
"name": "Mindflow logo list",
"category": "Mindflow",
"blocks": [
{
"type": "logo_image"
},
{
"type": "logo_image"
},
{
"type": "logo_image"
}
]
}
]
}
{% endschema %}
