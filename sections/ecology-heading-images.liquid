<div class="sectionimages__wrapper">
    <div class="wrapper__inner">
        <h2>{{section.settings.heading}}</h2>
        <div class="images__wrapper">
            <div class="img__description__wrapper">
                <div class="img__wrap">
                    <img src="{{section.settings.image1 | img_url: 'master'}}" alt="{{section.settings.image1.alt}}">
                </div>
                <div class="description__content">{{section.settings.description1}}</div>
            </div>
            <div class="img__description__wrapper">
                <div class="img__wrap">
                    <img src="{{section.settings.image2 | img_url: 'master'}}" alt="{{section.settings.image2.alt}}">
                </div>
                <div class="description__content">{{section.settings.description2}}</div>
            </div>
        </div>
    </div>
</div>

<style>
    .description__content p{
        margin-top: 46px;
        font-size: 16px;
        line-height: 28px;
        color: #6C6E73;
    }
    .img__wrap img{
        height: 100%;
        object-fit: cover;
    }
    .img__wrap{
        border-radius: 10px;
        overflow: hidden;
    }
    .img__description__wrapper{
        max-width: 520px;
        width: 50%;
    }
    .img__description__wrapper + .img__description__wrapper{
        margin-left: 40px;
    }
    .wrapper__inner{
        max-width: 1180px;
        margin: 0 auto;
        padding: 80px 20px;
    }
    .wrapper__inner h2{
        font-size: 32px;
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
        line-height: 64px;
    }
    .images__wrapper{
        display: flex;
        justify-content: space-between;
        margin-top: 50px;
    }
    .sectionimages__wrapper{
        background-color: #e9ecee;
        margin: 120px 0;
    }

    @media screen and (max-width: 768px) {
        .sectionimages__wrapper{
            background-color: #e9ecee;
            margin: 80px 0;
        }
        .images__wrapper{
            flex-direction: column;
            margin-top: 20px;
            align-items: center;
        }
        .img__description__wrapper{
            width: 100%;
        }
        .img__description__wrapper + .img__description__wrapper{
            margin-left: 0;
            margin-top: 30px;
        }
        .description__content p{
            margin-top: 20px;
        }
        .wrapper__inner h2{
            font-size: 28px;
            line-height: 1.5;
        }
        .wrapper__inner{
            padding: 80px 20px;
        }
    }
</style>


{% schema %}
{
    "name": "Heading images",
    "settings": [
        {
           "type": "text",
           "id": "heading",
           "label": "Heading"
        },
        {
           "type": "image_picker",
           "id": "image1",
           "label": "Image"
        },
        {
           "type": "richtext",
           "id": "description1",
           "label": "Description"
        },
        {
           "type": "image_picker",
           "id": "image2",
           "label": "Image"
        },
        {
           "type": "richtext",
           "id": "description2",
           "label": "Description"
        }
    ]
}
{% endschema %}