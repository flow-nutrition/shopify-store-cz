<div class="rich-text" style="background: {{ section.settings.background_color }}">
  <div class="rich-text-wrapper">
    <div class="rich-text__heading">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="rich-text__text"><p>{{ section.settings.text }}</p></div>
  </div>
</div>
<div class="rich-text-icons" style="background: {{ section.settings.background_color }}">
  <div class="rich-text-icons-wrapper">
    {% for block in section.blocks %}
      {% if block.settings.heading != blank %}
        <div class="icon-wrapper">
          <img src="{{ block.settings.heading | handle | append: '.svg' | asset_url }}" alt="{{ block.heading }} svg"> 
          <p>{{ block.settings.heading | handle }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Mindflow rich text",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Default heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
  	}
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Icon",
      "settings": [
        {
          "type": "textarea",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mindflow rich text",
      "category": "Mindflow",
      "blocks": [
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        }
      ]
    }
  ]
}
{% endschema %}
