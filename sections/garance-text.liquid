<div class="guarantee_block">
    <div class="guarantee_block_position">
        <h3>{{ section.settings.head_grnt}}</h3>
        <div class="topic">{{ section.settings.topic }}</div>
        <h4>{{ section.settings.head_art_g }}</h4>
        <div class="grnt_article">{{ section.settings.grnt_article }}</div>
        <div class="quote_block">
            <div class="quote">{{ section.settings.quote }}</div>
            <p class="heading_author">{{ section.settings.author }}</p>
        </div>
        <div class="for_mobile">
            <div class="question_block">
                <p class="heading_question">{{ section.settings.question }}</p>
                <div class="answer">{{ section.settings.answer }}</div>
            </div>
            <div class="art_m">
                <h4>{{ section.settings.head_art2_g }}</h4>
                <div class="grnt_article">{{ section.settings.grnt_article2}}</div>
            </div>
        </div>
    </div>
</div>
</div>


<style>
    .heading_author{
        font-size: 16px !important;
        line-height: 20px !important;
        font-weight: normal;
        font-family: 'Graphik-Medium';
    }
    .heading_question{
        font-size: 18px !important;
        line-height: 26px !important;
        font-weight: normal;
        font-family: 'Graphik-Medium';
    }
    .guarantee_block{
        display: flex;
        width: 100%;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .guarantee_block_position{
        display: flex;
        width: 90%;
        max-width: 736px;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
    }
    .guarantee_block_position h3{
        font-weight: normal;
        font-size: 56px;
        line-height: 72px;
        color: #222222;
        margin: 84px 0;
        font-family: 'Graphik-Light';
    }
    .topic{
        font-size: 19px;
        line-height: 32px;
        color: #222222;
        margin: 0 0 64px;
    }
    .guarantee_block_position h4{
        font-weight: normal;
        font-size: 32px;
        line-height: 48px;
        color: #222222;
        margin: 0 0 24px;
    }
    .grnt_article{
        font-size: 16px;
        line-height: 28px;
        color: #222222;
        margin: 0 0 55px;
    }
    .grnt_article a{
        color: #FF4438;
        text-decoration: underline;
    }
    .quote_block{
        display: flex;
        width: 100%;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding: 32px 32px 40px 32px;
        background: #FFF2F0;
        border-radius: 8px;
        margin-bottom: 55px;
    }
    .quote{
        font-style: italic;
        font-weight: normal;
        font-size: 18px;
        line-height: 32px;
        color: #222222;
        margin: 0 0 24px;
    }
    .quote_block p{
        font-size: 16px;
        line-height: 20px;
        margin: 0;
    }
    .guarantee_block_position p{
        font-size: 16px;
        line-height: 28px;
        color: #222222;
    }
    .for_mobile{
        display: flex;
        width: 100%;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
    }
    .answer{
        font-size: 16px;
        line-height: 28px;
        margin-bottom: 64px;
    }
    @media screen and (max-width: 768px){
        .guarantee_block_position h3{
            font-size: 48px;
            line-height: 56px;
            margin: 0 0 64px;
        }
        .topic{
            font-size: 18px;
            line-height: 28px;
            margin: 0 0 54px;
        }
        .guarantee_block_position h4{
            font-size: 28px;
            line-height: 42px;
            margin: 0 0 18px;
        }
        .grnt_article{
            margin: 0 0 40px;
        }
        .quote{
            line-height: 28px;
        }

    }
    @media screen and (max-width: 600px){
        .guarantee_block_position{
            width: 100%;
            padding: 0 32px;
        }
        .guarantee_block_position h3{
            font-size: 36px;
            line-height: 48px;
            margin: 0 0 44px;
        }
        .topic{
            font-size: 16px;
            line-height: 28px;
            margin: 0 0 40px;
        }
        .guarantee_block_position h4{
            font-size: 24px;
            line-height: 32px;
            margin: 0 0 16px;
        }
        .quote{
            font-size: 16px;
        }
    }


</style>

