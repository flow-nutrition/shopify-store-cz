<section class="logo-section-wrapper">
  <div class="logo-section-content">
    <div class="logo_position">
      <div class="logo-list border--{{ section.id }}">
          <div class="header">
            <div class="logo-title">{{ section.settings.heading | escape }}</div>
            <div class="container-arrows-partners">
              <div class="prev-review-slide4">{% include 'review_arrow_left' %}</div>
              <div class="next-review-slide4">{% include 'review_arrow_right' %}</div>
            </div>
          </div>
        <div class="logo-wrapper-partners">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            <div class="logo-partners">
              <a href="{{ block.settings.link }}" target="_blank">
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="logo">
              </a>
            </div>
          {% endif %}
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{{ 'slick.min.js' | asset_url | script_tag }}

<script>
      $('.logo-wrapper-partners').slick({
          infinite: true,
          speed: 300,
          slidesToShow: 4,
          prevArrow: $('.prev-review-slide4'),
          nextArrow: $('.next-review-slide4'),
          slidesToScroll: 1,
          responsive: [
                  {
                    breakpoint: 1300,
                    settings: {
                      slidesToShow: 3,
                      slidesToScroll: 1
                    }
                  },
                  {
                      breakpoint: 768,
                      settings: {
                        slidesToShow: 3,
                        slidesToScroll: 1
                      }
                  },
                  {
                      breakpoint: 500,
                      settings: {
                          slidesToShow: 2,
                          slidesToScroll: 1,
                      }
          }
          ]       
      });
</script>

<style>
  .review_arrow_left{
    margin-right: 20px;
  }
  .logo_position{
  max-width: 100%;
  }
  .container-arrows-partners{
    display: flex;
  }
  .header{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right: 165px;
    margin-bottom: 20px;
    margin-top: 20px;
  }
  .logo-section-content{
    margin-left: 165px;
    margin-right: 0px;
    max-width: 100%;
  }
  .logo-title{
    font-style: normal;
    font-weight: 400;
    font-size: 32px;
    line-height: 42px;
    text-align: center;
    letter-spacing: 0;
    color: #222222;
    font-family: "Graphik-Regular";
  }
  .logo-list{
    justify-content: center;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .logo-wrapper-partners{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  .logo-partners {
    display: flex !important;
    margin: 0 60px 0 0;
    min-height: 80px;
  }
  .logo-partners img{
    height: 100%;
    object-fit: contain;
    max-width: 250px!important;
    filter: brightness(100%);
    transition-duration: 500ms;
  }
  .logo-partners  img:hover{
    filter: brightness(20%);
    transition-duration: 500ms;
  }
  .logo_position .slick-list{
    padding: 0 85px 0 0;
  }
  .border--{{ section.id }}{
  {% if section.settings.show-border %}
    border-bottom: 1px solid #E9ECEE;
  {% endif %}
  }
  .logo-section-wrapper{
    background-color: {{ section.settings.bg-color }};
    margin-bottom: -12px;
    width: 100%;
  }
  @media (max-width: 1250px){
    .header{
      padding-right: 80px;
    }
    .logo-section-content{
      margin-left: 80px;
    }
    .logo-partners img{
      height: 100%;
      object-fit: contain;
      width: 100%;
    }
  }
  @media (max-width: 970px){
    .header{
      padding-right: 30px;
    }
    .logo-list{
      padding-left: 0;
    }
  }

  @media (max-width: 996px) {

    .logo-section-content{
      margin-left: 30px;
    }
    .logo-wrapper-partners {
      justify-content: center;
      margin: 0 auto;
    }
    .logo-title{
      margin-right: 0;
      text-align: left;
      width: 100%;
    }
    .header{
      padding-bottom: 0;
    }
  }
  @media (max-width: 768px){
    .logo-section-content{
      margin-left: 0;
    }
    .logo-list{
      padding-left: 16px;
    }
    .header{
      padding-right: 16px;
    }
  }
  @media (max-width: 480px) {
    .review_arrow_left{
      margin-right: 10px;
    }
    .logo-title{
      font-size: 24px;
      line-height: 32px;
    }
    .prev-review-slide4 svg, .next-review-slide4 svg {
      max-width: 44px;
      height: 44px;
    }
    .logo-list {
      padding-bottom: 0;
      justify-content: center;
    }
    .logo-wrapper-partners .logo-partners{
      padding: 0px;
      width: 50%;
      text-align: center;
      margin: 10px 0;
    }
    .logo-partners a{
      max-width: 75%;
      margin: 0 auto;
      display: block;
    }
  }
  @media (min-width: 1540px) {
    .logo-wrapper-partners{
      min-width: auto;
      justify-content: space-between;
    }

  }
</style>

